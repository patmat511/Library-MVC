@model IEnumerable<Biblioteka_ASP.ViewModels.UserViewModel>
@{
	ViewData["Title"] = "Zarządzanie użytkownikami";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
	<thead>
		<tr>
			<th>Email</th>
			<th>Imię</th>
			<th>Nazwisko</th>
			<th>Role</th>
			<th>Akcje</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model)
		{
			<tr>
				<td>@user.Email</td>
				<td>@user.Imie</td>
				<td>@user.Nazwisko</td>
				<td>@string.Join(", ", user.Roles)</td>
				<td>
					<a asp-action="EditRoles" asp-route-id="@user.Id" class="btn btn-primary">Edytuj role</a>
				</td>
			</tr>
		}
	</tbody>
</table>

