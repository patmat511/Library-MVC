@model Biblioteka_ASP.Models.Gatunki

@{
    ViewData["Title"] = "Edytuj Gatunek";
}

<h2>Edytuj Gatunek</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID_Gatunku" />
    <div class="form-group">
        <label asp-for="Gatunek" class="control-label"></label>
        <input asp-for="Gatunek" class="form-control" />
        <span asp-validation-for="Gatunek" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}