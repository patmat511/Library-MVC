<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteka</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/startbootstrap-sb-admin-2@4.1.4/css/sb-admin-2.min.css" />

    <style>
        .sidebar.bg-gradient-primary {
            background: #6B4E71 !important; 
        }

        .sidebar .nav-item .nav-link:hover,
        .sidebar .nav-item.active .nav-link {
            background-color: #A68FA6 !important; 
        }

        .topbar {
            background-color: #F8F9FC !important; 
        }

        .sticky-footer {
            background-color: #D1D3E2 !important;
        }

        .sidebar .nav-item .nav-link {
            color: #E8E8E8 !important; 
        }

            .sidebar .nav-item .nav-link:hover {
                color: #FFFFFF !important; 
            }

            .sidebar .nav-item .nav-link i {
                color: #E8E8E8 !important;
            }

            .sidebar .nav-item .nav-link:hover i {
                color: #FFFFFF !important;
            }

        .topbar .nav-item .nav-link {
            color: #5A5C69 !important; 
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-book"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Biblioteka</div>
            </a>
            <hr class="sidebar-divider my-0">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Ksiazki" asp-action="Index">
                    <i class="fas fa-fw fa-book-open"></i>
                    <span>Książki</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Klienci" asp-action="Index">
                    <i class="fas fa-fw fa-users"></i>
                    <span>Klienci</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Wypozyczenia" asp-action="Index">
                    <i class="fas fa-fw fa-exchange-alt"></i>
                    <span>Wypożyczenia</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Gatunki" asp-action="Index">
                    <i class="fas fa-fw fa-tags"></i>
                    <span>Gatunki</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="Index">
                    <i class="fas fa-fw fa-user-cog"></i>
                    <span>Użytkownicy</span>
                </a>
            </li>
            <hr class="sidebar-divider">
        </ul>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                    <i class="fa fa-bars"></i>
                </button>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown no-arrow">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                                @(User.Identity.IsAuthenticated ? User.Identity.Name : "Gość")
                            </span>
                            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                            <a class="dropdown-item" href="/Identity/Account/Manage">Profil</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Identity/Account/Logout">Wyloguj</a>
                        </div>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <div id="content">
                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        © 2025 - Biblioteka_ASP - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>