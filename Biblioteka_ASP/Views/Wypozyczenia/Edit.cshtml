@model Biblioteka_ASP.Models.Wypozyczenia

@{
    ViewData["Title"] = "Edytuj Wypożyczenie";
}

<h2>Edytuj Wypożyczenie</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID_Wypozyczenia" />
    <div class="form-group">
        <label asp-for="ID_Ksiazki" class="control-label">Książka</label>
        <select asp-for="ID_Ksiazki" class="form-control" asp-items="ViewBag.Ksiazki"></select>
        <span asp-validation-for="ID_Ksiazki" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ID_Klienta" class="control-label">Klient</label>
        <select asp-for="ID_Klienta" class="form-control" asp-items="ViewBag.Klienci"></select>
        <span asp-validation-for="ID_Klienta" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data_Wypozyczenia" class="control-label"></label>
        <input asp-for="Data_Wypozyczenia" class="form-control" type="date" />
        <span asp-validation-for="Data_Wypozyczenia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data_Zwrotu" class="control-label"></label>
        <input asp-for="Data_Zwrotu" class="form-control" type="date" />
        <span asp-validation-for="Data_Zwrotu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Kara" class="control-label"></label>
        <input asp-for="Kara" class="form-control" />
        <span asp-validation-for="Kara" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}