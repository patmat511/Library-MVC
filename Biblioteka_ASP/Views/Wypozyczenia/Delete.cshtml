@model Biblioteka_ASP.Models.Wypozyczenia

@{
    ViewData["Title"] = "Usuń Wypożyczenie";
}

<h2>Usuń Wypożyczenie</h2>

<h3>Czy na pewno chcesz usunąć to wypożyczenie?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Książka</dt>
        <dd class="col-sm-10">@(Model.Ksiazki?.Tytul ?? "Brak książki")</dd>
        <dt class="col-sm-2">Klient</dt>
        <dd class="col-sm-10">@(Model.Klienci?.Imie ?? "Brak klienta")</dd>
        <dt class="col-sm-2">Data Wypożyczenia</dt>
        <dd class="col-sm-10">@Model.Data_Wypozyczenia.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Data Zwrotu</dt>
        <dd class="col-sm-10">@Model.Data_Zwrotu.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Kara</dt>
        <dd class="col-sm-10">@Model.Kara</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.ID_Wypozyczenia" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    </form>
</div>